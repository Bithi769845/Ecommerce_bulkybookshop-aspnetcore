@model IEnumerable<Category>
@{
	ViewData["Title"] = "Index";
}

@* @if (TempData["success"] != null)
{
	<h2>@TempData["success"]</h2>
} *@

@* <partial name="_Notification" /> *@

<div class="container mt-5">
	<div class="row mb-3">
		<div class="col-md-6"><h3 class="text-primary">Category List</h3></div>
		<div class="col-md-6 text-end">
			<a class="btn btn-primary " asp-controller="Category" asp-action="Create"><i class="bi bi-patch-plus"></i> &nbsp; Create New Category</a>
		</div>
	</div>

	<table class="table table-bordered table-striped text-white" style="width:100%;">
		<thead>
			<tr>
				<th>Category Name</th>
				<th>Display Order</th>
				<th>Action</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.DisplayOrder</td>
					<td><div>
							<a class="btn btn-success" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
							<a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i> Delete</a>
					</div></td>
				</tr>
			}
		</tbody>

	</table>
</div>

