@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="row mb-3 mt-5">
    <div class="col-md-6"><h3 class="text-primary">Cover Type List</h3></div>
    <div class="col-md-6 text-end">
        <a class="btn btn-primary " asp-controller="CoverTypes" asp-action="Create"><i class="bi bi-patch-plus"></i> &nbsp; Create New Cover Type</a>
    </div>
</div>

<table class="table table-bordered table-striped text-white" style="width:100%;">
    <thead>
        <tr>
            <th>Cover Type Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>@item.Name</td>
                    <td>
                    <a class="btn btn-success" asp-controller="CoverTypes" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a> |
                    <a class="btn btn-danger" asp-controller="CoverTypes" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i> Delete</a> |
                    </td>
                </tr>
     }
    </tbody>
</table>
