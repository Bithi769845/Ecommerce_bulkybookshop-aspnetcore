@model CoverType
@{
    ViewData["Title"] = "Create";
}


<div class="container mt-5">
<div class="row">
    <h1>Create New Cover Type</h1>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <button type="submit" class="btn btn-success" style="width:150px">Create</button>
            <a class="btn btn-primary ms-2" asp-controller="CoverTypes" asp-action="Index" style="width:150px">Back to List</a>
        </form>

</div>
</div>

 

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}